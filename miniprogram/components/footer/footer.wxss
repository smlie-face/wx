/* components/footer/footer.wxss */
.top,
.centre {
  display: flex;
  justify-content: space-between;
}

.top {
  padding: 0 8%;
}

.centre {
  margin: 10rpx 0;
  padding: 0 10%;
}

.top text,
.centre text {
  display: block;
  font-size: 24rpx;
}

.bottom text {
  display: block;
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #808080;
}